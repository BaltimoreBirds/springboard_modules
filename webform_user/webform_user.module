/**
 * Access callback to check if current node is a webform user.
 */
function webform_user_access_clone($node) {
  if (isset($node->is_webform_user)) {
    return ($node->is_webform_user && node_access('update', $node));
  }
  else {
    return FALSE;
  }
}

