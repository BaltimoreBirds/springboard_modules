<?php

/**
 * @file
 * Payment gateway manager
 *
 * This module provides functionality for creating multiple versions of the
 * same payment gateway with different settings.
 */


/**
 * Implements hook_form_alter().
 */
function gateway_manager_form_alter(&$form, &$form_state, $form_id) {
  if (fundraiser_is_donation_edit_form($form_id, $form)) {
    module_load_include('inc', 'gateway_manager', 'gateway_manager.admin');
    gateway_manager_donation_node_form($form, $form_state);
  }
  elseif ((strpos($form_id, 'webform_client_form_') === 0) && fundraiser_is_donation_type($form['#node']->type)) {
    // Add the validate callback to the donation form.
    $form['#validate'][] = 'gateway_manager_donation_form_validate';
  }
}

/**
 * Validate callback for the donation node edit/add form.
 */
function gateway_manager_donation_node_form_validate($form, &$form_state) {
  module_load_include('inc', 'gateway_manager', 'gateway_manager.admin');
  _gateway_manager_donation_node_form_validate($form, $form_state);
}

/**
 * Implements hook_payment_fields_alter().
 */
function gateway_manager_payment_method_fields_alter(&$fields, $payment_method) {
  foreach ($fields as &$field) {
    gateway_manager_required_field_replace($field);
  }
}

/**
 * Converts required form elements to non-required. Adds an additional
 * attribute that will be used to add custom required validation.
 *
 * @param $field
 *   The field to convert.
 */
function gateway_manager_required_field_replace(&$field) {
  if ($field['#required']) {
    $field['#required'] = FALSE;
    $field['#gateway_manager_required'] = TRUE;
  }

  $child_fields = element_children($field);
  if (is_array($child_fields) && count($child_fields) > 0) {
    foreach ($child_fields as $child_field) {
      gateway_manager_required_field_replace($field[$child_field]);
    }
  }
}

/**
 * Validate callback for donation forms.
 *
 * This function will act as a conduit for calling the validate_callback for
 * the selected payment method and gateway.
 */
function gateway_manager_donation_form_validate($form, &$form_state) {
  // Shortcut to the node.
  $node = $form['#node'];

  // Create an data structure that will tell us exactly where each webform
  // component lives in the FAPI array.
  $component_hierarchy = fundraiser_parse_components($node->nid, $node->webform['components']);

  // Flatten the submitted values.
  $values = _fundraiser_array_flatten($form_state['values']['submitted']);

  if (isset($values['payment_method']) && isset($node->gateway_manager)) {
    $payment_method = $values['payment_method'];

    if (isset($node->gateway_manager['payment_methods'][$payment_method])) {
      // Check for #gateway_manager_required flag. Do this here so it only
      // validates required fields on the selected payment method.
      $payment_fields = &fundraiser_find_field($form, $component_hierarchy['payment_fields']);
      _gateway_manager_donation_form_validate_required($payment_fields[$payment_method], $form_state);

      // Shortcut to the gateway_instance machine name value.
      $gateway_instance = $node->gateway_manager['payment_methods'][$payment_method]->gateway_instance;

      // Load the method info array for this method and gateway_instance.
      $method_info = gateway_manager_method_load($payment_method, $gateway_instance);

      if (function_exists($method['validate_callback'])) {
        // Call the gateway's validate callback for this payment method.
        $method['validate_callback']($form, $form_state, $values, $method_info);
      }
    }
  }
}

/**
 * Validate callback for #gateway_manager_required flag. Copied nearly verbatim
 * from _form_validate().
 */
function _gateway_manager_donation_form_validate_required($elements, &$form_state) {
  // Also used in the installer, pre-database setup.
  $t = get_t();

  // Recurse through all children.
  foreach (element_children($elements) as $key) {
    if (isset($elements[$key]) && $elements[$key]) {
      _gateway_manager_donation_form_validate_required($elements[$key], $form_state);
    }
  }

  // Validate the current input.
  if (!isset($elements['#validated']) || !$elements['#validated']) {
    if (isset($elements['#needs_validation'])) {
      // Make sure a value is passed when the field is required.
      // A simple call to empty() will not cut it here as some fields, like
      // checkboxes, can return a valid value of '0'. Instead, check the
      // length if it's a string, and the item count if it's an array.
      if ($elements['#gateway_manager_required'] && (!count($elements['#value']) || (is_string($elements['#value']) && strlen(trim($elements['#value'])) == 0))) {
        form_error($elements, $t('!name field is required.', array('!name' => $elements['#title'])));
      }
    }
  }
}

/**
 * Implements hook_theme().
 */
function gateway_manager_theme() {
  return array(
    'gateway_manager_node_form_payment_methods' => array(
      'arguments' => array('fieldset' => NULL),
