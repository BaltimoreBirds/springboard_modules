  $schema['springboard_p2p_private_campaign_approval'] = array(
    'description' => 'Stores approval status for private campaigns.',
    'fields' => array(
      'uid' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'description' => 'The {users}.uid.',
