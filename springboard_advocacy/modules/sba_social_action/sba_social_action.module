/**
 * Control access to multi-step page two\.
 *
 * @param $nid
 * @return bool
 */
function sba_social_action_preview_access($nid) {
  $node = node_load($nid);
  if (isset($node->type) &&  $node->type == 'sba_social_action') {
    $session_nid = isset($_SESSION['action_sid']['nid']) ? $_SESSION['action_sid']['nid'] : 0;
    if ($session_nid == $nid) {
      return TRUE;
    }
  }
  return FALSE;
}

