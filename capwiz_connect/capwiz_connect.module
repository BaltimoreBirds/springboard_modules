  $items['admin/settings/capwiz_connect'] = array(
    'title' => 'Capwiz Connect Accounts',
    'description' => 'List of Capwiz Connect accounts',
    'file' => 'capwiz_connect.admin.inc',
    'page callback' => 'capwiz_connect_account_list',
    'access arguments' => array('administer capwiz_connect'),
    'type' => MENU_NORMAL_ITEM,
  );
  $items['admin/settings/capwiz_connect/accounts'] = array(
    'title' => 'Accounts',
    'file' => 'capwiz_connect.admin.inc',
    'page callback' => 'capwiz_connect_account_list',
    'access arguments' => array('administer capwiz_connect'),
    'type' => MENU_DEFAULT_LOCAL_TASK,
  );
  
  $items['admin/settings/capwiz_connect/accounts/add'] = array(
    'title' => 'Add Capwiz Connect Account',
    'description' => 'Add a new Capwiz Connect account',
    'file' => 'capwiz_connect.admin.inc',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('capwiz_connect_account_addoredit'),
    'access arguments' => array('administer capwiz_connect'),
    'type' => MENU_LOCAL_TASK,
  );

  $items['admin/settings/capwiz_connect/accounts/edit/%capwiz_connect_account'] = array(
    'title' => 'Edit Capwiz Connect Account',
    'description' => 'Edit a Capwiz Connect account',
    'file' => 'capwiz_connect.admin.inc',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('capwiz_connect_account_addoredit', 5),
    'access arguments' => array('administer capwiz_connect'),
  );
  
  $items['admin/settings/capwiz_connect/accounts/user_mapping/%capwiz_connect_account'] = array(
    'title' => 'User Mapping for Capwiz Connect Account',
    'description' => 'Edit User Mapping for Capwiz Connect Account',
    'file' => 'capwiz_connect.admin.inc',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('capwiz_connect_account_user_mapping', 5),
    'access arguments' => array('administer capwiz_connect'),
  );
  $items['admin/settings/capwiz_connect/accounts/action_mapping/%capwiz_connect_account'] = array(
    'title' => 'Action Mapping for Capwiz Connect Account',
