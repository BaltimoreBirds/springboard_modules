/**
 * @file
 * Fundraiser A/B Test
 *
 * Adds special functionality to the Webform A/B Test module for use with Fundraising
 * forms.
 */

/**
 * Implement post-submit hook from webform_ab
 * Add condition for total amount collected?
 */


/**
 * Implementation of hook_form_alter().
 */
function fundraiser_ab_form_alter(&$form, $form_state, $form_id) {
  switch ($form_id) {
    // Webform A/B node form
    case 'webform_ab_node_form':
      // Add Fundraiser form to type list on Webform A/B node form.
      // This only applies when the webform_ab module is enabled
      $form['form_types']['#options']['fundraiser'] = 'Fundraiser';
      break;
  }
}

