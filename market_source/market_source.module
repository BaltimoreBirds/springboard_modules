define('MARKET_SOURCE_MS_MAX_LENGTH', 255);
define('MARKET_SOURCE_CID_MAX_LENGTH', 255);
define('MARKET_SOURCE_REFERRER_MAX_LENGTH', 255);
define('MARKET_SOURCE_INITIAL_REFERRER_MAX_LENGTH', 255);

