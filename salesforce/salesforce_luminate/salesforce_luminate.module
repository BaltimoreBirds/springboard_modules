<?php

/**
 * @file
 * Provides Blackbaud Luminate integration for Salesforce.
 */

/**
 * Implements hook_salesforce_genmap_map_field_info_alter()
 * 
 * Removes webform Salesforce field mapping; not currently compatible with
 * Luminate. May be restored once Springboard Salesforce package is no longer
 * dependent on NPSP and can be used with Luminate.
 */
function salesforce_luminate_salesforce_genmap_map_field_info_alter(&$fields, $node, $module) {
  if (isset($fields['salesforce_webform_map'])) {
    unset($fields['salesforce_webform_map']);
  }
}
