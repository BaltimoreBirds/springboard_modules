/**
 * Implements hook_fundraiser_donation_success().
 */
function salesforce_donation_fundraiser_donation_success($donation) {
  // Reload donation to be sure to get everything we need from submission table then send to queue.
  $donation = fundraiser_donation_get_donation($donation->did, TRUE);
  // Since this is called at the end of a standalone processing,
  // or after a recurring donation is processed: upsert
  salesforce_genmap_send_object_to_queue('salesforce_donation', 'UPSERT', $donation->node, $donation->did, $donation);
}

/**
 * Implements hook_fundraiser_donation_refund_success().
 */
function salesforce_donation_fundraiser_donation_refund_success($donation) {
  // Reload donation to be sure to get everything we need from submission table then send to queue.
  $donation = fundraiser_donation_get_donation($donation->did, TRUE);
  // Since this is called at the end of a standalone processing,
  // or after a recurring donation is processed: upsert
  salesforce_genmap_send_object_to_queue('salesforce_donation', 'UPSERT', $donation->node, $donation->did, $donation);
}

