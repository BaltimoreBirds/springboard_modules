/**
 * Fundraiser testing class.
 */
class FundraiserUbercartUnitTestCase extends FundraiserUbercartUnitTestSetup {

  /**
   * Implements getInfo(). Declares this test class to fundraiser testing.
   */
  public static function getInfo() {
    return array(
      'name' => 'Fundraiser ubercart unit tests',
      'description' => 'Tests fundraiser ubercart functions as unit tests.',
      'group' => 'Springboard',
    );
  }

  /**
   * Unit test DB functions for fundraiser_donation.
   */
  function testUbercartDBFunctions() {
    // Check countries created.
    $countries = _fundraiser_ubercart_get_countries();
    $this->assertEqual(count($countries), 243, '_fundraiser_ubercart_get_countries() got correct default number of countries.', 'testUbercartDBFunctions');

    // Check zones.
    $zones = _fundraiser_ubercart_get_zone_by_country(840); // For US.
    $this->assertEqual(count($zones), 65, '_fundraiser_ubercart_get_zone_by_country() got correct default number of zones for US.', 'testUbercartDBFunctions');

    // Check the higher level related array construction of this data.
    $countries_to_zones = fundraiser_ubercart_get_countries();
    $this->assertEqual(count($countries_to_zones->countries), 243, 'fundraiser_ubercart_get_countries() got correct default number of countries.', 'testUbercartDBFunctions');
    $this->assertEqual($countries_to_zones->countries[124]->country_name, 'Canada', '_fundraiser_ubercart_get_countries() got correct name for US.', 'testUbercartDBFunctions');
    $this->assertEqual($countries_to_zones->countries[840]->country_name, 'United States', '_fundraiser_ubercart_get_countries() got correct name for US.', 'testUbercartDBFunctions');
    $this->assertEqual(count($countries_to_zones->countries[840]->zones), 65, 'fundraiser_ubercart_get_countries() got correct default number of zones for US.', 'testUbercartDBFunctions');
    $this->assertEqual($countries_to_zones->countries[840]->zones[2]->zone_name, 'Alaska', '_fundraiser_ubercart_get_countries() got correct name for Alaska.', 'testUbercartDBFunctions');
    $this->assertEqual(count($countries_to_zones->zones), 78, 'fundraiser_ubercart_get_countries() got correct default number of zones for countries.', 'testUbercartDBFunctions');
    $this->assertEqual($countries_to_zones->zones[2]->zone_name, 'Alaska', '_fundraiser_ubercart_get_countries() got correct name for Alaska.', 'testUbercartDBFunctions');

    // Test updating default order status.
    $defaults = array(
      'order_id' => 1,
      'uid' => 1,
      'order_status' => 'created',
      'order_total' => 1,
      'product_count' => 1,
      'primary_email' => 'example@example.com',
    );
    drupal_write_record('uc_orders', $defaults);
    _fundraiser_ubercart_update_order_status('updated', 1);
    $status = db_query('SELECT order_status FROM {uc_orders} WHERE order_id = 1')->fetchColumn();
    $this->assertEqual($status, 'updated', '_fundraiser_ubercart_update_order_status() correctly updated status.', 'testUbercartDBFunctions');
  }

  /**
   * Unit test DB functions for fundraiser_donation.
   */
  function testUbercartCardFunctions() {
    // Check path for encryption path.
    $path = fundraiser_ubercart_fundraiser_get_credit_encryption_path();
    $expected = t('Not configured, see below.');
    $this->assertEqual($path, $expected, 'fundraiser_ubercart_fundraiser_get_credit_encryption_path() got correct path value.', 'testUbercartCardFunctions');
    variable_set('uc_credit_encryption_path', 'set_path');
    $path = fundraiser_ubercart_fundraiser_get_credit_encryption_path();
    $expected = t('set_path');
    $this->assertEqual($path, $expected, 'fundraiser_ubercart_fundraiser_get_credit_encryption_path() got correct path value.', 'testUbercartCardFunctions');

    // Check that card identification is correct based on card number.
    $card_type = _fundraiser_ubercart_get_cc_type('');
    $expected = 'UNKNOWN';
    $this->assertEqual($card_type, $expected, '_fundraiser_ubercart_get_cc_type() got correct path value.', 'testUbercartCardFunctions');
    $card_type = _fundraiser_ubercart_get_cc_type('1234567890');
    $expected = 'UNKNOWN';
    $this->assertEqual($card_type, $expected, '_fundraiser_ubercart_get_cc_type() got correct path value.', 'testUbercartCardFunctions');
    $card_type = _fundraiser_ubercart_get_cc_type('323456789012345');
    $expected = 'amex';
    $this->assertEqual($card_type, $expected, '_fundraiser_ubercart_get_cc_type() got correct path value.', 'testUbercartCardFunctions');
    $card_type = _fundraiser_ubercart_get_cc_type('6011567890123456');
    $expected = 'discover';
    $this->assertEqual($card_type, $expected, '_fundraiser_ubercart_get_cc_type() got correct path value.', 'testUbercartCardFunctions');
    $card_type = _fundraiser_ubercart_get_cc_type('5234567890123456');
    $expected = 'mc';
    $this->assertEqual($card_type, $expected, '_fundraiser_ubercart_get_cc_type() got correct path value.', 'testUbercartCardFunctions');
    $card_type = _fundraiser_ubercart_get_cc_type('4234567890123456');
    $expected = 'visa';
    $this->assertEqual($card_type, $expected, '_fundraiser_ubercart_get_cc_type() got correct path value.', 'testUbercartCardFunctions');
    $card_type = _fundraiser_ubercart_get_cc_type('4234567890123');
    $expected = 'visa';
    $this->assertEqual($card_type, $expected, '_fundraiser_ubercart_get_cc_type() got correct path value.', 'testUbercartCardFunctions');
  }

