  if (substr($payment_method_id, 0, 27) == 'commerce_paywithmybank_bank') {
    unset($form['commerce_payment']['payment_details']['credit_card']);
    unset($form['commerce_payment']['payment_details']['cardonfile_instance_default']);
  }
}

