      'module' => 'fundraiser_entity',
      'label callback' => 'fundraiser_entity_donation_entity_label',
      'uri callback' => 'fundraiser_entity_donation_entity_uri',
      'entity keys' => array(
        'id' => 'did',
      ),
      'fieldable' => TRUE,
      'bundles' => array(
        'fundraiser_donation' => array(
          'label' => 'Fundraiser Donation',
          'admin' => array(
            'path' => 'admin/springboard/settings/donation-entity',
