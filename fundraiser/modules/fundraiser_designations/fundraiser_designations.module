/**
 * Menu access callback.
 *
 * Ensure node has designationing enabled and user has node
 * 'update' permission.
 */
function fundraiser_designations_manage_access($node, $account = NULL) {
  global $user;
  $account = isset($account) ? $account : $user;
  $designation_types = fundraiser_designations_get_designation_types();
  return node_access('update', $node, $account) && $designation_types[$node->type] == TRUE;
}

