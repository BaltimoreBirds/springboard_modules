/**
 * Implements hook_schema().
 */
function fundraiser_user_schema() {
  $schema['fundraiser_component_map'] = array(
    'description' => 'The map of webform components to user profile fields.',
    'fields' => array(
      'nid' => array(
        'description' => 'The original fundraiser node.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'cid' => array(
        'description' => 'The component id.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'map_id' => array(
        'description' => 'The profile field name.',
        'type' => 'varchar',
        'length' => '100',
        'not null' => TRUE,
      ),
    ),
    'primary key' => array('nid', 'cid'),
  );
  return $schema;
}

